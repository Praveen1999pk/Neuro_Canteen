{
  "expo": {
    "name": "Neuro Canteen",
    "slug": "neuro-canteen",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "neurocanteen",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.neurocanteen.app",
      "buildNumber": "1.0.0",
      "infoPlist": {
        "NSCameraUsageDescription": "Required for scanning QR codes",
        "NSLocationWhenInUseUsageDescription": "Required for delivery tracking"
      }
    },
    
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/adaptive-icon.png",
        "backgroundColor": "#166534"
      },
      "package": "com.neuro_canteen.NeuroCanteen",
      "permissions": [
        "RECEIVE_BOOT_COMPLETED",
        "WAKE_LOCK"
      ],
      "versionCode": 1
    },
    
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/splash.png",
          "resizeMode": "contain",
          "backgroundColor": "#166534"
        }
      ],
      [
        "expo-notifications",
        {
          "icon": "./assets/images/notification.png",
          "color": "#ffffff",
          "sounds": ["./assets/sounds/notification.mp3"],
          "mode": "production"
        }
      ]
    ],
    
    "experiments": {
      "typedRoutes": true
    },
    
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "a932ee59-f5c8-4854-98d4-f9a5114d75f1"
      }
    },
    
    "owner": "neuro_canteen-2-2"
  }
}